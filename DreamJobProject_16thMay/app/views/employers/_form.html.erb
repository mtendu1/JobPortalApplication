<%= form_for @employer, :html => { :class => "form-horizontal employer" } do |f| %>

    <% if @employer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@employer.errors.count, "error") %> prohibited this employer from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @employer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :company_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :company_name, :class => 'form-control' %>
    </div>
    <%= error_span(@employer[:company_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :company_phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :company_phone, :class => 'form-control' %>
    </div>
    <%= error_span(@employer[:company_phone]) %>
  </div>
  <div class="control-group">
    <%= f.label :ein, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ein, :class => 'form-control' %>
    </div>
    <%= error_span(@employer[:ein]) %>
  </div>
    <p>
      <%=f.label :Industry_type %>
      <%= f.select(:Industry_type, [['Banking'],['Insurance'],['Health'],['Telecommunication']]) %>
    </p>

    <div class="control-group">
      <%= f.label :address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :address, :class => 'form-control' %>
      </div>
      <%= error_span(@employer[:address]) %>
    </div>


    <p>
      <%=f.label :State %>
      <%= f.select(:State,options_for_select(us_states)) %>
    </p>

    <p>
      <%=f.label :Country %>
      <%= f.select(:Country, ['US']) %>
    </p>


    <div class="control-group">
    <%= f.label :contact_person_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact_person_name, :class => 'form-control' %>
    </div>
    <%= error_span(@employer[:contact_person_name]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            employers_path, :class => 'btn btn-default' %>



<% end %>
