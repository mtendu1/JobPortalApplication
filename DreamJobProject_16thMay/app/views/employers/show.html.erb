<%- model_class = Employer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:company_name) %>:</strong></dt>
  <dd><%= @employer.company_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:company_phone) %>:</strong></dt>
  <dd><%= @employer.company_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ein) %>:</strong></dt>
  <dd><%= @employer.ein %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contact_person_name) %>:</strong></dt>
  <dd><%= @employer.contact_person_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              employers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_employer_path(@employer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              employer_path(@employer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
